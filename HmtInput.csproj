<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Title>HmtInput</Title>
    <Authors>Ali Raza</Authors>
    <Company>Humans Meta Tech</Company>
    <Product>HmtInput</Product>
    <Description>A User Input Tracking Tool</Description>
    <PackageProjectUrl>https://github.com/HumansMetaTech/HmtInput/</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/HumansMetaTech/HmtInput/</RepositoryUrl>
    <PackageTags>tracking; usertracking; inputtracking; mousetracking; keyboardtracking;</PackageTags>
    <PackageLicenseFile>MIT-LICENCE.txt</PackageLicenseFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <Optimize>True</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <None Update="MIT-LICENCE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
